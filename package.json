{
  "name": "template-code",
  "displayName": "template-code",
  "description": "获取对应的模板",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "title": "发财 ",
          "id": "money",
          "icon": "./static/svg/money.svg"
        }
      ]
    },
    "views": {
      "money": [
        {
          "id": "pageTemplate",
          "name": "记忆模板",
          "icon": "./static/svg/money.svg"
        },
        {
          "id": "businessGuide",
          "name": "避雷针"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "template-code.clearCD",
        "title": "🤓清空console/debugger"
      },
      {
        "command": "template-code.createFilePath",
        "title": "创建模板文件"
      },
      {
        "command": "template-code.collectCodeSnippet",
        "title": "分享片段"
      },
      {
        "command": "pageTemplate.add",
        "title": "添加模板"
      },
      {
        "command": "pageTemplate.refresh",
        "title": "刷新",
        "icon": {
          "light": "./static/svg/money.svg",
          "dark": "./static/svg/money.svg"
        }
      },
      {
        "command": "pageTemplate.item.delete",
        "title": "删除模板",
        "icon": {
          "light": "./static/svg/money.svg",
          "dark": "./static/svg/money.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "template-code.collectCodeSnippet",
        "key": "ctrl+q",
        "mac": "ctrl+q",
        "when": "editorTextFocus"
      },
      {
        "command": "template-code.clearCD",
        "key": "ctrl+d",
        "mac": "ctrl+d",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pageTemplate.refresh",
          "when": "view ==pageTemplate",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pageTemplate.item.delete",
          "when": "view ==pageTemplate",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "template-code.clearCD",
          "group": "navigation"
        },
        {
          "when": "editorFocus",
          "command": "template-code.collectCodeSnippet",
          "group": "navigation"
        },
        {
          "when": "editorFocus",
          "command": "pageTemplate.add",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "template-code.createFilePath",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "shared",
      "properties": {
        "shared.webhook": {
          "type": "string",
          "default": "https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=6d3ec4c8-6e80-46d5-bb78-b593496cdf11",
          "description": "webhook地址"
        },
        "shared.sharedType": {
          "type": "string",
          "default": "text",
          "description": "分享代码的默认类型",
          "enum": [
            "markdown",
            "text"
          ]
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "fast-text-encoding": "^1.0.3"
  }
}
