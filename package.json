{
  "name": "template-code",
  "displayName": "template-code",
  "description": "获取对应的模板",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:template-code.helloWorld",
    "onCommand:template-code.testEditorCommand"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "template-code.helloWorld",
        "title": "🤓Hello World"
      },
      {
        "command": "template-code.getCurrentFilePath",
        "title": "获取文件"
      },
      {
        "command": "template-code.testEditorCommand",
        "title": "文本编辑"
      }
    ],
    "keybindings": [
      {
        "command": "template-code.helloWorld",
        "key": "ctrl+q",
        "mac": "ctrl+q",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "template-code.helloWorld",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "template-code.getCurrentFilePath",
          "group": "navigation"
        }
      ]
    },
    "properties": {
      "templateCode.yourName": {
        "type": "string",
        "default": "guest",
        "description": "你的名字" 
      },
      "templateCode.showTip": {
        "type": "boolean",
        "default": true,
        "description": "是否在每次启动时显示欢迎提示！"
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.57.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
